{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "outDir": "./dist-widget",
    "noEmit": false,
    "allowJs": true
  },
  "include": ["src/widget.tsx", "src/components/**/*", "src/utils/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist", "__tests__", "src/index.ts", "src/services/**/*"]
}
