# Nuvemshop OAuth
NUVEMSHOP_CLIENT_ID=seu_client_id
NUVEMSHOP_CLIENT_SECRET=seu_client_secret
NUVEMSHOP_REDIRECT_URI=https://seuapp.com/api/auth/callback

# Nuvemshop App Config (para rota /login embedded)
NUVEMSHOP_APP_ID=seu_app_id
NUVEMSHOP_OAUTH_AUTHORIZE_URL=https://www.nuvemshop.com.br/apps/authorize
NUVEMSHOP_SCOPES=write_products,read_orders

# Backend
NODE_ENV=development
PORT=3000
SESSION_SECRET=gerar_string_aleatoria_segura

# Segurança — Criptografia de tokens (AES-256-GCM)
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TOKEN_ENCRYPTION_KEY=gerar_64_chars_hex_aqui

# Segurança — HMAC para validação de webhooks
# Deve ser o client_secret do app Nuvemshop
WEBHOOK_HMAC_SECRET=seu_client_secret

# CORS — adicione a URL do seu app; domínios Nuvemshop são permitidos automaticamente
CORS_ORIGIN=https://seuapp.com

# URL de redirecionamento pós-autenticação (após login OAuth)
POST_AUTH_REDIRECT=https://seuapp.com/dashboard

# Frontend
WIDGET_CDN_URL=https://cdn.seuapp.com/widget/v1
WIDGET_API_URL=https://seuapp.com
MAX_VARIANTS_PER_GRID=200

# Deploy
RENDER_API_KEY=seu_render_api_key
RENDER_SERVICE_ID=seu_service_id
