# ── Nuvemshop OAuth ─────────────────────────────────────────
NUVEMSHOP_CLIENT_ID=seu_client_id
NUVEMSHOP_CLIENT_SECRET=seu_client_secret
NUVEMSHOP_REDIRECT_URI=https://seuapp.com/auth/callback

# ── Backend ─────────────────────────────────────────────────
NODE_ENV=development
PORT=3000
SESSION_SECRET=gerar_string_aleatoria_segura_aqui

# ── Frontend ─────────────────────────────────────────────────
WIDGET_CDN_URL=https://cdn.seuapp.com/widget/v1
MAX_VARIANTS_PER_GRID=200

# ── Deploy (Render.com) ─────────────────────────────────────
RENDER_API_KEY=seu_render_api_key
RENDER_SERVICE_ID=seu_service_id
